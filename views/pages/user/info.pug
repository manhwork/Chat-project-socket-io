extend ../../layout/base.pug


block main 

    link(rel="stylesheet", href="/css/infoUser.css")

    div(class="container-fluid")
        div(class="row")
            div(class="col-3 sidebar")
                ul(class="menu-list")
                    li(class="active")
                        a(href="/user/info") 
                            i(class="fas fa-user")
                            | Thông Tin Cá Nhân
                    li
                        a(href="/user/change/password") 
                            i(class="fas fa-key")
                            | Đổi Mật Khẩu
                    li
                        a(href="/user/logout") 
                            i(class="fas fa-sign-out-alt")
                            | Đăng Xuất
                    li
                        a(href="/user/list-friend") 
                            i(class="fas fa-users")
                            | Danh Sách Bạn Bè
                    li
                        a(href="/user/list-group") 
                            i(class="fas fa-layer-group")
                            | Danh Sách Nhóm
                    li 
                        a(href="/chats")
                            i(class="fas fa-layer-group")
                            | Quay lại
            div(class="col-9")
                div(class="container profile-container")
                    div(class="profile-header")
                        img(class="user-img" alt="User Image", height="80", src="https://storage.googleapis.com/a1aa/image/U28v49suejUnJ6le7DnNAEcGwyrMmiRz06u2P9KY91mqXnwTA.jpg", width="80")
                        input(type="file", name="avatar" class="file-input" accept="image/*")
                        div
                            div(class="name")
                                | #{userInfo.fullName}
                            div(class="email")
                                | #{userInfo.email}
                    form(
                        class="profile-body"
                        action="/user/info"
                        method="post"
                    )
                        div(class="section-title")
                            | Thông Tin Cá Nhân
                        div(class="info-group")
                            label(for="name")
                                | Họ và Tên
                            input#name(type="text", name="fullName" value=userInfo.fullName)
                        div(class="info-group")
                            label(for="email")
                                | Email
                            input#email(type="email", name="email" value=userInfo.email)
                        div(class="info-group")
                            label(for="phone")
                                | Số Điện Thoại
                            input#phone(type="text", name="phone" value=userInfo.phone)
                        div(class="info-group")
                            label(for="address")
                                | Địa Chỉ
                            input#address(type="text", name="address" value=userInfo.address)
                        button(class="profile-footer" type="submit")
                            | Cập Nhật
        
