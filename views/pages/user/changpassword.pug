extend ../../layout/base.pug
include ../../mixins/sidebar.pug


block main 

    link(rel="stylesheet", href="/css/infoUser.css")

    div(class="container-fluid")
        div(class="row")

            +sidebar(2)

            div(class="col-9")
                div(class="container profile-container")
                    div(class="profile-header")
                    form(
                        class="profile-body"
                        action="/user/change/password"
                        method="post"
                    )
                        div(class="info-group")
                            label(for="oldPassword")
                                | Mật khẩu cũ 
                            input#phone(type="password", name="oldPassword")
                        div(class="info-group")
                            label(for="newPassword")
                                | Mật khẩu mới
                            input#address(type="password", name="newPassword" )
                        div(class="info-group")
                            label(for="confirmPassword")
                                | Xác nhận mật khẩu 
                            input#address(type="password", name="confirmPassword" )
                        button(class="profile-footer" type="submit")
                            | Cập Nhật
        
