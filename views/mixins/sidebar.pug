mixin sidebar(index)
    div(class="col-3 sidebar")
        ul(class="menu-list")
            li(class= (index == 1 ? "active" : ""))
                a(href="/user/info") 
                    i(class="fas fa-user")
                    | Thông Tin Cá Nhân
            li(class= (index == 2 ? "active" : ""))
                a(href="/user/change/password") 
                    i(class="fas fa-key")
                    | Đổi Mật Khẩu
            li(class= (index == 3 ? "active" : ""))
                a(href="/user/logout") 
                    i(class="fas fa-sign-out-alt")
                    | Đăng Xuất
            li(class= (index == 4 ? "active" : ""))
                a(href="/user/list-friend") 
                    i(class="fas fa-users")
                    | Danh Sách Bạn Bè
            li(class= (index == 5 ? "active" : ""))
                a(href="/user/list-group") 
                    i(class="fas fa-layer-group")
                    | Danh Sách Nhóm
            li(class= (index == 6 ? "active" : ""))
                a(href="/chats")
                    i(class="fas fa-layer-group")
                    | Quay lại
                