extends ./layout/base.pug
include ./mixins/alert.pug

block main 
	link(rel="stylesheet", href="/css/login.css")

	+alert-success(3000)
	+alert-error(3000)

	.inner-main
		div(class="container")
			div(class="image-section")
				img(alt="A bowl of pasta with cherry tomatoes and greens", height="600", src="https://storage.googleapis.com/a1aa/image/YAoY1hlUOb7KDFzb2XF4fxCvGfytUIzkFvrDgDkttG2JzhwTA.jpg", style="width: 100%; height: 100%; object-fit: cover;", width="400")
			div(class="form-section")
				div(class="d-flex justify-content-evenly mb-4")
					a(href="/user/login"  class="btn btn-outline-success")
						| Đăng nhập
					a(href="/user/register" class="btn btn-outline-secondary")
						| Đăng kí
				h2
					| Welcome
				p
					| Vui lòng đăng kí tài khoản
				form(
					action="/user/login" 
					method="post"
				) 
					input(class="form-control", name="email" placeholder="Email", type="email" minlength="6" required)
					input(class="form-control", name="password" placeholder="Password", type="password" minlength="6" required)
					button(type="submit" class="btn btn-success w-100")
						| Đăng nhập
				a(class="forgot-password", href="/user/forgot")
					| Quên mật khẩu
				a(class="social-login mt-3", href="#")
					i(class="fab fa-facebook-f")
					| Đăng nhập bằng facebook
				p(class="terms")
					| Điều khoản và điều kiện & chính sách bảo mật
